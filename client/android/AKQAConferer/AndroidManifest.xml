<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akqa.kiev.android.conferer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:theme="@style/ConfererBaseTheme"
        android:allowBackup="true"
        android:icon="@drawable/conferer_logo"
        android:label="@string/app_name">
        <activity
            android:name="com.akqa.kiev.android.conferer.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>        
        </activity>
        <activity 
            android:name="ConferenceDetailActivity" 
            android:label="@string/app_name"
            android:parentActivityName="com.akqa.kiev.android.conferer.StartActivity">
        	<meta-data 
            	android:name="android.support.PARENT_ACTIVITY"
                android:value="com.akqa.kiev.android.conferer.StartActivity"/>
        </activity>
       
         <activity android:name="com.akqa.kiev.android.conferer.SearchableActivity" >
        	<intent-filter>
            	<action android:name="android.intent.action.SEARCH" />
       		 </intent-filter>
       		 <meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable"/>
   		 </activity>
   		 
        <provider android:name=".SearchSuggestionProvider"
                  android:authorities="com.akqa.kiev.android.conferer.SearchSuggestionProvider" />

        <!-- Points to searchable activity so the whole app can invoke search. -->
        <meta-data android:name="android.app.default_searchable"
                   android:value=".SearchableActivity" />
    </application>

</manifest>