<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akqa.kiev.android.conferer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:theme="@style/ConfererBaseTheme"
        android:allowBackup="true"
        android:icon="@drawable/conferer_logo"
        android:label="@string/app_name">
        <activity
            android:name="com.akqa.kiev.android.conferer.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.akqa.kiev.android.conferer.ConferenceDetailsActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.akqa.kiev.android.conferer.SessionDetailsActivity"
            android:label="@string/app_name" />
         <activity
            android:name="com.akqa.kiev.android.conferer.SpeakerDetailsActivity"
            android:label="@string/app_name" />
    </application>
</manifest>