<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/conference_list_item_background_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/conference_listitem_logo"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/conference_logo_background"
        android:padding="1dp"
        android:src="@drawable/conference_logo_test" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/conference_listitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lines="2"
            android:maxLines="2"
            android:text="Gartner Symposium / ITxpo"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/conference_listitem_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="24 APR - 1 MAY"
            android:textAllCaps="false"
            android:textColor="@color/conference_list_secondary_text"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/conference_listitem_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="London, England"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/conference_list_secondary_text"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
