<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/conference_list_item_background_selector"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/conference_details_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lines="2"
            android:maxLines="2"
            android:text="Building Windows Store Apps with XAML/c# for Windows 8/RT"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/conference_details_list_item_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="by Paul Betts and Ian Robinsonts"
            android:textAllCaps="false"
            android:textColor="@color/speaker_text_color"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/conference_details_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAY 2 14:30 - 15:30"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/conference_list_secondary_text"
            android:textSize="11dp" />

    </LinearLayout>

</LinearLayout>

