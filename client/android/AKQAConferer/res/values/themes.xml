<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- New Conferer styling -->

	<style name="ConfererBaseTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ConfererActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ConfererActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:titleTextStyle">@style/ConfererActionBarTitleText</item>
    </style>
    
    <!-- ActionBar title text -->
    <style name="ConfererActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title_text_color</item>
    </style>
    
</resources>
